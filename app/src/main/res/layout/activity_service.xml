<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.ServiceActivity">

    <Button
        android:layout_width="149dp"
        android:layout_height="48dp"
        android:text="Background Service"
        android:textAllCaps="false"
        android:visibility="visible"
        android:id="@+id/btn_background_service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_foreground_service_stop"
        android:layout_width="242dp"
        android:layout_height="99dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="48dp"
        android:text="Stop Foreground Service"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_background_service_stop"
        android:layout_width="242dp"
        android:layout_height="99dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="116dp"
        android:text="Stop Background Service"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>